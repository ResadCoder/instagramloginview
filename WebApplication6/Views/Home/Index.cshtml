@{
    Layout = "_Layout";
    ViewData["Title"] = "Login";
}

<div id="content-container" style="display:flex; justify-content:center; align-items:center; height:100vh; font-family: Arial, sans-serif;">
    <!-- User login section -->
    <section class="user" style="width: 300px; text-align: center;">

        <h2 style="margin-bottom: 20px;">Login</h2>

        <form method="post">
            <div class="inputs-container" style="margin-bottom: 10px;">
                <input type="text" name="Username" placeholder="Phone number, username or email" style="width:100%; padding:8px;" />
            </div>
            <div class="inputs-container" style="margin-bottom: 10px;">
                <input type="password" name="Password" placeholder="Password" style="width:100%; padding:8px;" />
            </div>
            <button type="submit" class="login-button" style="width:100%; padding:8px;">Log In</button>
        </form>

        <!-- Display errors or success messages -->
        @if(ViewBag.Error != null)
        {
            <p style="color:red; margin-top:10px;">@ViewBag.Error</p>
        }
    </section>
</div>